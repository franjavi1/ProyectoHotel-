@model IEnumerable<HotelApp.Models.Habitacion>
@inject LogicaDeNegocio.Data.AppDbContext _context

@{
    ViewData["Title"] = "Habitaciones";
}

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap" rel="stylesheet">


<div class="d-flex justify-content-between align-items-center mb-4 mt-3">
    <h2 class="fw-bold m-0 d-flex align-items-center" style="color: #5a6b7a;">
        <i class="fa-solid fa-bed me-3 fs-3"></i>
        Gestión de Habitaciones
    </h2>

    @if (EsAdministrador())
    {
        <a asp-action="Create" class="btn btn-custom-primary btn-lg shadow-sm">
            <i class="fa-solid fa-plus me-2"></i> Nueva Habitación
        </a>
    }
</div>

<hr class="mb-5" style="border-top: 2px solid #ff7b00; width: 100px; margin-left: 0;">


@functions {
    bool EsAdministrador()
    {
        var email = User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Email)?.Value;
        if (string.IsNullOrEmpty(email)) return false;
        var empleado = _context.Empleados.FirstOrDefault(e => e.Email == email);
        return empleado != null && empleado.Rol == "Administrador";
    }
}


@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <i class="fa-solid fa-circle-info me-2"></i> No hay habitaciones registradas.
    </div>
}
else
{
    <div class="row g-4 habitaciones-container">
        @foreach (var habitacion in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card habitacion-card">

                    <div class="card-header card-header-custom d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fa-solid fa-hashtag text-warning me-2"></i>
                            Habitación **@habitacion.Numero**
                        </h5>

                        @if (habitacion.Disponible)
                        {
                            <span class="badge badge-estado badge-disponible">Disponible</span>
                        }
                        else
                        {
                            <span class="badge badge-estado badge-ocupada">Ocupada</span>
                        }
                    </div>

                    <div class="card-body">
                        <p class="mb-2">
                            <i class="fa-solid fa-layer-group text-secondary me-2"></i>
                            <strong>Piso:</strong> @habitacion.Piso
                        </p>
                        <p class="mb-2">
                            <i class="fa-solid fa-door-open text-secondary me-2"></i>
                            <strong>Tipo:</strong> @habitacion.Tipo
                        </p>
                        <p class="mb-0 fw-bold" style="color: #ff7b00;">
                            <i class="fa-solid fa-money-bill-wave me-2"></i>
                            Precio: $@habitacion.Precio
                        </p>
                    </div>

                    <div class="card-footer bg-white d-flex justify-content-end">

                        <a asp-action="Details" asp-route-id="@habitacion.Id" class="btn btn-sm btn-card-action me-2">
                            <i class="fa-solid fa-eye"></i> Ver
                        </a>

                        @if (EsAdministrador())
                        {
                            <a asp-action="Edit" asp-route-id="@habitacion.Id" class="btn btn-sm btn-card-action me-2">
                                <i class="fa-solid fa-pen-to-square"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@habitacion.Id" class="btn btn-sm btn-danger-action">
                                <i class="fa-solid fa-trash"></i> Eliminar
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

