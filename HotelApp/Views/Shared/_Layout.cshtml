<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelApp</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HotelApp.styles.css" asp-append-version="true" />

    <!-- Bootstrap Icons & Font Awesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

    <style>
        /* Body */
        body {
            overflow-x: hidden;
            background: linear-gradient(135deg, #1f1f1f, #2b2b2b);
            color: #e0e0e0;
        }

        /* Sidebar */
        .sidebar {
            min-height: 100vh;
            background-color: #212529;
            padding-top: 1rem;
        }

            .sidebar .nav-link {
                font-size: 1.05rem;
                border-radius: 8px;
                padding: 8px 12px;
                transition: background-color 0.3s ease, transform 0.2s ease;
                color: #e0e0e0;
                display: flex;
                align-items: center;
                gap: 8px;
            }

                .sidebar .nav-link i {
                    width: 24px;
                    text-align: center;
                    font-size: 1.2rem;
                    color: #5a6b7a; /* Azul grisáceo */
                    transition: color 0.3s ease;
                }

                .sidebar .nav-link:hover {
                    background-color: rgba(255,255,255,0.1);
                    transform: translateX(4px);
                }

                    .sidebar .nav-link:hover i {
                        color: #ff7b00; /* Naranja */
                    }

                .sidebar .nav-link.active {
                    background-color: #495057;
                    color: #fff;
                }

        /* Botones */
        .btn-custom {
            background-color: #5a6b7a; /* Azul grisáceo */
            color: #fff;
            border: none;
            font-weight: 600;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #ff7b00; /* Naranja */
                color: #fff;
                transform: scale(1.05);
            }

        .btn-warning {
            background-color: #ff7b00 !important;
            color: #fff !important;
            border: none !important;
            font-weight: 600;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

            .btn-warning:hover {
                background-color: #5a6b7a !important; /* Azul grisáceo */
                color: #fff !important;
                transform: scale(1.05);
            }

        /* Contenido principal */
        main {
            padding: 2rem 1rem;
        }

        /* Footer */
        footer {
            border-top: 1px solid #444;
        }

        /* Responsive móvil */
        /* Responsive móvil */
        @@media (max-width: 767.98px) {
            .sidebar  {
            min-height: auto !important;
            height: auto !important;
            position: static !important;
            padding-bottom: 1rem;
        }

        }

        .card,p, h1{
            color: #212529 !important; /* texto gris oscuro */
        }
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar -->
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar position-sticky">
                    <h5 class="text-light text-center mb-4">
                        <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">🏨 HotelApp</a>
                    </h5>

                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fa-solid fa-hotel"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2" asp-area="" asp-controller="Empleados" asp-action="Index">
                                <i class="fa-solid fa-user-tie"></i> Empleados
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2" asp-area="" asp-controller="Habitaciones" asp-action="Index">
                                <i class="fa-solid fa-door-closed"></i> Habitaciones
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2" asp-area="" asp-controller="Huespedes" asp-action="Index">
                                <i class="fa-solid fa-users"></i> Huéspedes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2" asp-area="" asp-controller="Reservas" asp-action="Index">
                                <i class="fa-solid fa-calendar-days"></i> Reservas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fa-solid fa-shield-halved"></i> Privacy
                            </a>
                        </li>
                    </ul>

                    <hr class="text-secondary">

                    <div class="px-3 text-light">
                        <p>Bienvenido, <strong>@User.Identity.Name</strong></p>
                        <a class="btn btn-outline-warning btn-sm" asp-controller="Login" asp-action="Logout">Cerrar sesión</a>
                    </div>
                </nav>
            }

            <!-- Contenido principal -->
            <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4 bg-light">
                <partial name="_Alerts" />
                @RenderBody()
            </main>

        </div>
    </div>

    <footer class="border-top footer text-muted py-3 bg-dark text-light">
        <div class="container">
            &copy; 2025 - HotelApp - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
