<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - HotelApp</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/HotelApp.styles.css" asp-append-version="true" />
	<style>
		body {
			overflow-x: hidden;
		}

		.sidebar {
			min-height: 100vh;
		}

			.sidebar .nav-link.active {
				background-color: #495057;
				color: #fff;
			}
	</style>
</head>
<body>

	<div class="container-fluid">
		<div class="row">
@if (User.Identity != null && User.Identity.IsAuthenticated)
{
	

					<!-- SIDEBAR IZQUIERDA -->
					<nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar position-sticky pt-3">
						<!-- Logo -->
						<h5 class="text-light text-center mb-4">
							<a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">🏨 HotelApp</a>
						</h5>

						<!-- Menú vertical -->
						<ul class="nav flex-column">
							<li class="nav-item">
								<a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-light" asp-area="" asp-controller="Empleados" asp-action="Index">Empleados</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-light" asp-area="" asp-controller="Habitaciones" asp-action="Index">Habitaciones</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-light" asp-area="" asp-controller="Huespedes" asp-action="Index">Huéspedes</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-light" asp-area="" asp-controller="Reservas" asp-action="Index">Reservas</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
							</li>
						</ul>

						<hr class="text-secondary">

						<!-- Usuario / Logout -->
						<div class="px-3 text-light">
							@if (User.Identity != null && User.Identity.IsAuthenticated)
							{
								<p>Bienvenido, <strong>@User.Identity.Name</strong></p>
								<a class="btn btn-outline-warning btn-sm" asp-controller="Login" asp-action="Logout">Cerrar sesión</a>
							}
							else
							{
								<p>Para cambiar de cuenta de Google, cerrá sesión también en:</p>
								<a href="https://accounts.google.com" target="_blank" class="text-info">Google</a>
							}
						</div>
					</nav>
	}
				<!-- CONTENIDO PRINCIPAL -->
				<main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4 bg-light">
					<!-- Alertas -->
					<partial name="_Alerts" />
					@RenderBody()
				</main>

	</div>
	</div>

		<footer class="border-top footer text-muted py-3">
			<div class="container">
				&copy; 2025 - HotelApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
			</div>
		</footer>

		<script src="~/lib/jquery/dist/jquery.min.js"></script>
		<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
		<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
	</body>
	</html>
