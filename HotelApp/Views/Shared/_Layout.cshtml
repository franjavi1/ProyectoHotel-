@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    var antiforgeryToken = Antiforgery.GetAndStoreTokens(Context).RequestToken;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelApp</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HotelApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

    <meta name="csrf-token" content="@antiforgeryToken" />

    <style>
        body {
            overflow-x: hidden;
            background: #f8f9fa;
            color: #212529;
        }

        /* Sidebar desktop */
        .sidebar-desktop {
            background-color: #212529;
            color: #e0e0e0;
            min-height: 100vh;
            padding-top: 1rem;
        }

            .sidebar-desktop .nav-link {
                font-size: 1.05rem;
                border-radius: 8px;
                padding: 8px 12px;
                color: #e0e0e0;
                display: flex;
                align-items: center;
                gap: 8px;
                transition: background-color 0.3s ease, transform 0.2s ease;
            }

                .sidebar-desktop .nav-link i {
                    width: 24px;
                    text-align: center;
                    font-size: 1.2rem;
                    color: #5a6b7a;
                    transition: color 0.3s ease;
                }

                .sidebar-desktop .nav-link:hover {
                    background-color: rgba(255,255,255,0.1);
                    transform: translateX(4px);
                }

                    .sidebar-desktop .nav-link:hover i {
                        color: #ff7b00;
                    }

                .sidebar-desktop .nav-link.active {
                    background-color: #495057;
                    color: #fff;
                }

        /* User block */
        .user-block {
            background-color: #343a40;
            color: #fff;
            border-radius: 10px;
            padding: 10px;
            margin: 1rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .user-block img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                border: 2px solid #fff;
                object-fit: cover;
            }

            .user-block .user-info p {
                margin: 0;
                line-height: 1.1;
            }

            .user-block .ms-auto {
                margin-left: auto;
            }

        /* Main content */
        main {
            padding: 2rem 1rem;
            min-height: 100vh;
            background-color: #f8f9fa !important;
            color: #212529;
        }

        /* Footer */
        footer {
            border-top: 1px solid #ddd;
            background-color: #f8f9fa;
            color: #212529;
            text-align: center;
            padding: 0.5rem;
        }

        /* Botones */
        .btn-custom {
            background-color: #5a6b7a;
            color: #fff;
            border: none;
            font-weight: 600;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #ff7b00;
                color: #fff;
                transform: scale(1.05);
            }

        .btn-warning {
            background-color: #ff7b00 !important;
            color: #fff !important;
            border: none !important;
            font-weight: 600;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

            .btn-warning:hover {
                background-color: #5a6b7a !important;
                color: #fff !important;
                transform: scale(1.05);
            }

        /* Offcanvas (menú móvil) */
        .offcanvas-header {
            position: relative;
        }

            .offcanvas-header .btn-close {
                position: absolute;
                left: 334px;
                top: 50%;
                transform: translateY(-50%);
            }
    </style>
</head>
<body>
    <!-- Navbar móvil -->
    <nav class="navbar navbar-dark bg-dark d-md-none">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">🏨 HotelApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar" aria-controls="offcanvasSidebar">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>

    <!-- Offcanvas móvil -->
    <div class="offcanvas offcanvas-start d-md-none bg-dark text-light" tabindex="-1" id="offcanvasSidebar">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title text-light">🏨 HotelApp</h5>
            <button type="button" class="btn-close btn-close-white text-reset" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-hotel"></i> Home</a></li>
                <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Empleados" asp-action="Index"><i class="fa-solid fa-user-tie"></i> Empleados</a></li>
                <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Habitaciones" asp-action="Index"><i class="fa-solid fa-door-closed"></i> Habitaciones</a></li>
                <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Huespedes" asp-action="Index"><i class="fa-solid fa-users"></i> Huéspedes</a></li>
                <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Reservas" asp-action="Index"><i class="fa-solid fa-calendar-days"></i> Reservas</a></li>
                <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fa-solid fa-shield-halved"></i> Estadísticas</a></li>
            </ul>
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <div class="user-block mt-3 bg-secondary text-light">
                    <div class="user-info">
                        <p>Bienvenido,</p>
                        <p><strong>@User.Identity.Name</strong></p>
                    </div>
                    <a class="btn btn-outline-warning btn-sm ms-auto" asp-controller="Login" asp-action="Logout">Cerrar sesión</a>
                </div>
            }
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar desktop -->
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <nav class="col-md-3 col-lg-2 d-none d-md-block sidebar-desktop position-sticky">
                    <h5 class="text-light text-center mb-4">
                        <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">🏨 HotelApp</a>
                    </h5>

                    <ul class="nav flex-column">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-hotel"></i> Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Empleados" asp-action="Index"><i class="fa-solid fa-user-tie"></i> Empleados</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Habitaciones" asp-action="Index"><i class="fa-solid fa-door-closed"></i> Habitaciones</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Huespedes" asp-action="Index"><i class="fa-solid fa-users"></i> Huéspedes</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Reservas" asp-action="Index"><i class="fa-solid fa-calendar-days"></i> Reservas</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fa-solid fa-shield-halved"></i> Estadísticas</a></li>
                    </ul>

                    <div class="user-block mt-4">
                        <div class="user-info">
                            <p>Bienvenido,</p>
                            <p><strong>@User.Identity.Name</strong></p>
                        </div>
                        <a class="btn btn-outline-warning btn-sm ms-auto" asp-controller="Login" asp-action="Logout">Cerrar sesión</a>
                    </div>
                </nav>
            }

            <!-- Contenido principal -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                <partial name="_Alerts" />
                @RenderBody()
            </main>
        </div>
    </div>

    <footer>
        &copy; 2025 - HotelApp - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-dark">Estadísticas</a>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SweetAlert2 (global) -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Manejo global de confirmaciones: cualquier enlace con el atributo data-swal-confirm
        document.addEventListener('click', function (e) {
            const el = e.target.closest('[data-swal-confirm]');
            if (!el) return;
            e.preventDefault();

            const title = el.getAttribute('data-swal-title') || 'Confirmar acción';
            const text = el.getAttribute('data-swal-text') || '¿Estás seguro?';
            const href = el.getAttribute('href');
            const postUrl = el.getAttribute('data-post-url'); // opcional para POST

            Swal.fire({
                title: title,
                text: text,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Sí, confirmar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    if (postUrl) {
                        // crear y enviar form POST (incluye token antiforgery desde meta)
                        const form = document.createElement('form');
                        form.method = 'post';
                        form.action = postUrl;
                        const tokenMeta = document.querySelector('meta[name="csrf-token"]');
                        if (tokenMeta) {
                            const input = document.createElement('input');
                            input.type = 'hidden';
                            input.name = '__RequestVerificationToken';
                            input.value = tokenMeta.content;
                            form.appendChild(input);
                        }
                        document.body.appendChild(form);
                        form.submit();
                    } else if (href) {
                        window.location = href;
                    }
                }
            });
        }, false);
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>