@model IEnumerable<HotelApp.Models.Reserva>

@{
    ViewData["Title"] = "Reservas";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.bootstrap5.min.css" />

<h1>Reservas</h1>

<p>
    <a asp-action="Create" class="btn btn-sm btn-warning"><i class="fa-solid fa-plus"></i> Nueva reserva</a>
</p>

<table id="reservasTable" class="table table-striped table-hover" style="width:100%">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Huesped)</th>
            <th>@Html.DisplayNameFor(model => model.Habitacion)</th>
            <th>@Html.DisplayNameFor(model => model.Empleado)</th>
            <th>@Html.DisplayNameFor(model => model.FechaEntrada)</th>
            <th>@Html.DisplayNameFor(model => model.FechaSalida)</th>
            <th>@Html.DisplayNameFor(model => model.PrecioTotal)</th>
            <th>@Html.DisplayNameFor(model => model.Pagado)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Huesped.Apellido)</td>
                <td>@Html.DisplayFor(modelItem => item.Habitacion.Numero)</td>
                <td>@Html.DisplayFor(modelItem => item.Empleado.Email)</td>
                <td>@item.FechaEntrada.ToString("yyyy-MM-dd")</td>
                <td>@item.FechaSalida.ToString("yyyy-MM-dd")</td>
                <td>@String.Format("{0:C}", item.PrecioTotal)</td>
                <td>@(item.Pagado ? "Sí" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Ver</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <!-- jQuery + DataTables + Bootstrap integration + Responsive -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap5.min.js"></script>

    <script>
        (function () {
            $(document).ready(function () {
                $('#reservasTable').DataTable({
                    responsive: true,
                    language: {
                        url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                    },
                    order: [[3, 'desc']], // ordenar por FechaEntrada (columna 4, índice 3)
                    columnDefs: [
                        {
                            targets: 6, // columna Pagado
                            className: 'text-center',
                            render: function (data, type, row) {
                                var d = (data || '').toString().toLowerCase();
                                if (d === 'sí' || d === 'si' || d === 'true') return '<span class="badge bg-success">Sí</span>';
                                if (d === 'no' || d === 'false') return '<span class="badge bg-danger">No</span>';
                                return data;
                            }
                        },
                        {
                            targets: 5, // PrecioTotal
                            className: 'text-end',
                            render: function (data, type, row) {
                                return data;
                            }
                        },
                        {
                            targets: -1, // acciones
                            orderable: false,
                            searchable: false,
                            className: 'text-nowrap'
                        }
                    ]
                });
            });
        })();
    </script>
}